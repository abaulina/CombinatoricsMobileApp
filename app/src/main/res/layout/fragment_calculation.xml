<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:fillViewport="true"
    android:scrollbars="horizontal"
    android:isScrollContainer="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CalculationFragment">
<GridLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="50dp"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="30dp"
    android:rowCount="6"
    android:orientation="horizontal"
    android:columnCount="4">

    <io.github.kexanie.library.MathView
        android:layout_row="0"
        android:id="@+id/mathViewFormulaType"
        android:layout_width="40dp"
        android:minWidth="40dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="fill_vertical|center_vertical"
        android:layout_rowSpan="2"
        android:layout_height="wrap_content"
        android:layout_column="0"/>

    <EditText
        android:id="@+id/editTextNumberTop"
        android:layout_row="0"
        android:textSize="20sp"
        android:layout_width="45dp"
        android:minWidth="45dp"
        android:imeOptions="actionDone"
        android:layout_gravity="bottom"
        android:hint="123"
        android:layout_height="wrap_content"
        android:ems="1"
        android:inputType="number"
        android:layout_column="1"/>

    <TextView
        android:id="@+id/textViewEquals"
        android:layout_row="0"
        android:layout_rowSpan="2"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:textSize="40sp"
        android:textColor="@color/black"
        android:layout_column="2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content"
        android:text="=" />
    <EditText
        android:id="@+id/resultTextView"
        android:hint="NaN"
        android:inputType="text"
        android:background="@android:color/transparent"
        android:clickable="false"
        android:layout_marginEnd="40dp"
        android:cursorVisible="false"
        android:focusable="false"
        android:singleLine="true"
        android:layout_row="0"
        android:layout_rowSpan="2"
        android:layout_gravity="center_vertical"
        android:layout_column="3"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="40sp" />

    <EditText
            android:id="@+id/editTextNumberBottom"
        android:hint="123"
        android:textSize="20sp"
            android:layout_width="45dp"
            android:imeOptions="actionNext"
            android:layout_gravity="top"
            android:layout_height="wrap_content"
            android:ems="1"
            android:layout_row="1"
            android:inputType="number"
            android:layout_column="1"/>

    <io.github.kexanie.library.MathView
        android:layout_row="2"
        android:id="@+id/mathA"
        android:layout_marginTop="3dp"
        android:layout_width="40dp"
        android:layout_gravity="fill_vertical|center_vertical"
        android:layout_height="wrap_content"
        android:layout_column="0"/>
    <io.github.kexanie.library.MathView
        android:layout_row="3"
        android:id="@+id/mathB"
        android:layout_marginTop="3dp"
        android:layout_width="40dp"
        android:layout_gravity="fill_vertical|center_vertical"
        android:layout_height="wrap_content"
        android:layout_column="0"/>
    <io.github.kexanie.library.MathView
        android:layout_row="4"
        android:id="@+id/mathN"
        android:layout_width="40dp"
        android:layout_marginTop="3dp"
        android:layout_gravity="fill_vertical|center_vertical"
        android:layout_height="wrap_content"
        android:layout_column="0"/>
    <EditText
        android:id="@+id/editTextNumberA"
        android:layout_row="2"
        android:textSize="20sp"
        android:layout_width="45dp"
        android:imeOptions="actionDone"
        android:layout_gravity="bottom"
        android:hint="123"
        android:layout_height="wrap_content"
        android:ems="1"
        android:inputType="number"
        android:layout_column="1"/>
    <EditText
        android:id="@+id/editTextNumberB"
        android:layout_row="3"
        android:textSize="20sp"
        android:layout_width="45dp"
        android:imeOptions="actionDone"
        android:layout_gravity="bottom"
        android:hint="123"
        android:layout_height="wrap_content"
        android:ems="1"
        android:inputType="number"
        android:layout_column="1"/>
    <EditText
        android:id="@+id/editTextNumberN"
        android:layout_row="4"
        android:textSize="20sp"
        android:layout_width="45dp"
        android:imeOptions="actionDone"
        android:layout_gravity="bottom"
        android:hint="123"
        android:layout_height="wrap_content"
        android:ems="1"
        android:inputType="number"
        android:layout_column="1"/>
    <TextView
        android:id="@+id/textViewEqualsBinomial"
        android:layout_row="2"
        android:layout_rowSpan="3"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:textSize="40sp"
        android:textColor="@color/black"
        android:layout_column="2"
        android:layout_height="wrap_content"
        android:text="=" />
    <TextView
        android:id="@+id/resultBinomialTextView"
        android:layout_gravity="center_vertical"
        android:hint="NaN"
        android:layout_marginEnd="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_row="2"
        android:layout_rowSpan="3"
        android:layout_column="3"
        android:textSize="40sp" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonStartCalc"
        app:strokeWidth="1.5dp"
        app:strokeColor="@color/darkOrchid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/calculate"
        android:layout_row="5"
        android:textSize="25sp"
        android:layout_column="0"
        android:layout_columnSpan="4"
        android:layout_gravity="center_horizontal"/>
</GridLayout>
    </HorizontalScrollView>
